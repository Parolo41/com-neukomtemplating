<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>
		<field
			name="id"
			type="number"
			label="ID"
			default="0"
			class="readonly"
			readonly="true"
		/>
		<field
			name="name"
			type="text"
			label="Name"
			size="40"
			required="true"
		 />
		<field
			name="tablename"
			type="text"
			label="Tablename"
			size="40"
			required="true"
		 />
		<field
			name="fields"
			type="text"
			label="Fields"
			size="200"
			required="true"
		 />
		<field
			name="condition"
			type="text"
			label="SQL Condition"
			size="500"
			required="true"
		 />
		<field
			name="header"
			type="textarea"
			rows="10"
			cols="5"
			filter="raw"
			label="Header"
		 />
		<field
			name="template"
			type="textarea"
			rows="10"
			cols="5"
			filter="raw"
			label="Template"
			required="true"
		 />
		<field
			name="footer"
			type="textarea"
			rows="10"
			cols="5"
			filter="raw"
			label="Footer"
		 />
		<field
			name="joined_tables"
			type="text"
			label="Joined Tables"
			size="500"
		/>
		<field
			name="show_detail_page"
			type="checkbox"
			label="Show detail page"
		 />
		<field
			name="allow_create"
			type="checkbox"
			label="Allow create"
		 />
		<field
			name="allow_edit"
			type="checkbox"
			label="Allow edit"
		 />
	</fieldset>
</form>