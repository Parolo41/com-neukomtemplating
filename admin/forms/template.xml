<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>
		<field
			name="id"
			type="number"
			label="ID"
			default="0"
			class="readonly"
			readonly="true"
		/>
		<field
			name="name"
			type="text"
			label="Name"
			size="40"
			required="true"
		 />
		<field
			name="tablename"
			type="text"
			label="Tablename"
			size="40"
			required="true"
		 />
		<field
			name="id_field_name"
			type="text"
			label="ID field name"
			size="40"
			required="true"
		 />
		<field
			name="fields"
			type="text"
			label="Fields"
			size="200"
			required="true"
		 />
		<field
			name="condition"
			type="text"
			label="SQL Condition"
			size="500"
			required="false"
		 />
		<field
			name="sorting"
			type="text"
			label="Sorting"
			size="80"
			required="false"
		 />
		<field
			name="limit"
			type="number"
			label="Limit"
			default="0"
			required="false"
		 />
		<field
			name="user_id_link_field"
			type="text"
			label="User ID link field"
			default=""
			required="false"
		 />
		<field
			name="header"
			type="textarea"
			rows="10"
			cols="5"
			filter="raw"
			label="Header"
		 />
		<field
			name="template"
			type="textarea"
			rows="10"
			cols="5"
			filter="raw"
			label="Template"
			required="true"
		 />
		<field
			name="footer"
			type="textarea"
			rows="10"
			cols="5"
			filter="raw"
			label="Footer"
		 />
		<field
			name="detail_template"
			type="textarea"
			rows="10"
			cols="5"
			filter="raw"
			label="Detail Template"
			required="true"
		 />
		<field
			name="joined_tables"
			type="text"
			label="Joined Tables"
			size="500"
		/>
		<field
			name="show_detail_page"
			type="checkbox"
			label="Show detail page"
		 />
		<field
			name="enable_search"
			type="checkbox"
			label="Enable Search"
		 />
		<field
			name="allow_edit"
			type="checkbox"
			label="Allow edit"
		 />
		<field
			name="allow_create"
			type="checkbox"
			label="Allow create"
		 />
		<field
			name="access"
			type="accesslevel"
			label="Access Permissions"
		 />
	</fieldset>
</form>