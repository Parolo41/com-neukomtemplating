<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>
		<field
			name="id"
			type="number"
			label="COM_NEUKOMTEMPLATING_FORM_ID"
			default="0"
			class="readonly"
			readonly="true"
		/>
		<field
			name="name"
			type="text"
			label="COM_NEUKOMTEMPLATING_FORM_NAME"
			size="40"
			required="true"
		 />
		<field
			name="tablename"
			type="text"
			label="COM_NEUKOMTEMPLATING_FORM_TABLENAME"
			size="40"
			required="true"
		 />
		<field
			name="id_field_name"
			type="text"
			label="COM_NEUKOMTEMPLATING_FORM_ID_FIELD_NAME"
			size="40"
			required="true"
		 />
		<field
			name="fields"
			type="text"
			label="COM_NEUKOMTEMPLATING_FORM_FIELDS"
			size="200"
			required="true"
		 />
		<field
			name="url_parameters"
			type="text"
			label="COM_NEUKOMTEMPLATING_FORM_URL_PARAMETERS"
			size="200"
			required="false"
		 />
		<field
			name="condition"
			type="text"
			label="COM_NEUKOMTEMPLATING_FORM_CONDITION"
			size="500"
			required="false"
		 />
		<field
			name="sorting"
			type="text"
			label="COM_NEUKOMTEMPLATING_FORM_SORTING"
			size="80"
			required="false"
		 />
		<field
			name="limit"
			type="number"
			label="COM_NEUKOMTEMPLATING_FORM_LIMIT"
			default="0"
			required="false"
		 />
		<field
			name="user_id_link_field"
			type="text"
			label="COM_NEUKOMTEMPLATING_FORM_USER_ID_LINK_FIELD"
			default=""
			required="false"
		 />
		<field
			name="header"
			type="textarea"
			rows="10"
			cols="5"
			filter="raw"
			label="COM_NEUKOMTEMPLATING_FORM_HEADER"
		 />
		<field
			name="template"
			type="textarea"
			rows="10"
			cols="5"
			filter="raw"
			label="COM_NEUKOMTEMPLATING_FORM_TEMPLATE"
			required="true"
		 />
		<field
			name="footer"
			type="textarea"
			rows="10"
			cols="5"
			filter="raw"
			label="COM_NEUKOMTEMPLATING_FORM_FOOTER"
		 />
		<field
			name="detail_template"
			type="textarea"
			rows="10"
			cols="5"
			filter="raw"
			label="COM_NEUKOMTEMPLATING_FORM_DETAIL_TEMPLATE"
			required="false"
		 />
		<field
			name="joined_tables"
			type="text"
			label="COM_NEUKOMTEMPLATING_FORM_JOINED_TABLES"
			size="500"
		/>
		<field
			name="show_detail_page"
			type="checkbox"
			label="COM_NEUKOMTEMPLATING_FORM_SHOW_DETAIL_PAGE"
		 />
		<field
			name="enable_search"
			type="checkbox"
			label="COM_NEUKOMTEMPLATING_FORM_ENABLE_SEARCH"
		 />
		<field
			name="enable_pagination"
			type="checkbox"
			label="COM_NEUKOMTEMPLATING_FORM_ENABLE_PAGINATION"
		 />
		<field
			name="page_size"
			type="number"
			label="COM_NEUKOMTEMPLATING_FORM_PAGE_SIZE"
			default="0"
			required="false"
		 />
		<field
			name="allow_edit"
			type="checkbox"
			label="COM_NEUKOMTEMPLATING_FORM_ALLOW_EDIT"
		 />
		<field
			name="allow_create"
			type="checkbox"
			label="COM_NEUKOMTEMPLATING_FORM_ALLOW_CREATE"
		 />
		<field
			name="form_send_behaviour"
			type="list"
			default="list_both"
			label="COM_NEUKOMTEMPLATING_FORM_FORM_SEND_BEHAVIOUR"
		>
			<option value="list_on_both">COM_NEUKOMTEMPLATING_FORM_LIST_ON_BOTH</option>
			<option value="edit_on_update">COM_NEUKOMTEMPLATING_FORM_EDIT_ON_UPDATE</option>
			<option value="edit_on_insert">COM_NEUKOMTEMPLATING_FORM_EDIT_ON_INSERT</option>
			<option value="edit_on_both">COM_NEUKOMTEMPLATING_FORM_EDIT_ON_BOTH</option>
		</field>
		<field
			name="access"
			type="accesslevel"
			label="COM_NEUKOMTEMPLATING_FORM_ACCESS"
		 />
	</fieldset>
</form>